{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node", // современный и рекомендуемый вариант
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0" // убирает предупреждения об устаревших опциях
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
